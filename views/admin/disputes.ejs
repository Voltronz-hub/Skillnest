<!DOCTYPE html>
<html>
<head>
  <title>Dispute Management - SkillNest Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/style.css" rel="stylesheet">
</head>
<body>
  <%- include('../partials/admin-navbar') %>

  <div class="container">
    <h1 class="mb-4">Dispute Management</h1>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Job Title</th>
          <th>Raised By</th>
          <th>Description</th>
          <th>Status</th>
          <th>Raised</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% disputes.forEach(dispute => { %>
          <tr>
            <td><%= dispute.jobId.title %></td>
            <td><%= dispute.raisedBy.username %></td>
            <td><%= dispute.description %></td>
            <td>
              <span class="badge bg-<%= dispute.status === 'resolved' ? 'success' : 'warning' %>">
                <%= dispute.status %>
              </span>
            </td>
            <td><%= dispute.createdAt.toDateString() %></td>
            <td>
              <% if (dispute.status !== 'resolved') { %>
                <button class="btn btn-sm btn-primary resolve-dispute" data-dispute-id="<%= dispute._id %>">
                  Resolve
                </button>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>

  <!-- Resolve Dispute Modal -->
  <div class="modal fade" id="resolveModal" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Resolve Dispute</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <form id="resolveForm">
            <div class="mb-3">
              <label for="resolution" class="form-label">Resolution</label>
              <textarea class="form-control" id="resolution" name="resolution" rows="3" required></textarea>
            </div>
            <input type="hidden" id="disputeId" name="disputeId">
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-primary" id="submitResolution">Resolve</button>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Resolve dispute functionality
    document.querySelectorAll('.resolve-dispute').forEach(button => {
      button.addEventListener('click', function() {
        const disputeId = this.getAttribute('data-dispute-id');
        document.getElementById('disputeId').value = disputeId;
        const modal = new bootstrap.Modal(document.getElementById('resolveModal'));
        modal.show();
      });
    });

    document.getElementById('submitResolution').addEventListener('click', async function() {
      const disputeId = document.getElementById('disputeId').value;
      const resolution = document.getElementById('resolution').value;

      if (!resolution.trim()) {
        alert('Please enter a resolution');
        return;
      }

      try {
        const response = await fetch(`/admin/disputes/${disputeId}/resolve`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
          },
          body: `resolution=${encodeURIComponent(resolution)}`
        });
        const result = await response.json();
        if (result.success) {
          alert('Dispute resolved successfully');
          location.reload();
        } else {
          alert('Error: ' + result.message);
        }
      } catch (error) {
        alert('Error resolving dispute');
      }
    });
  </script>
</body>
</html>
