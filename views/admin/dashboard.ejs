<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard - SkillNest</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/style.css" rel="stylesheet">
</head>
<body>
  <%- include('../partials/admin-navbar') %>

  <div class="container">
    <h1 class="mb-4">Welcome, Admin</h1>

    <div class="row mb-4">
      <div class="col-md-3">
        <div class="card mb-3 shadow-sm">
          <div class="card-body bg-primary text-white rounded-3">
            <h6>Users</h6>
            <h2 class="mt-2"><%= stats.userCount %></h2>
            <p class="mb-2">Total registered users</p>
            <a href="/admin/users" class="btn btn-light btn-sm">Manage Users</a>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card mb-3 shadow-sm">
          <div class="card-body bg-success text-white rounded-3">
            <h6>Jobs</h6>
            <h2 class="mt-2"><%= stats.jobCount %></h2>
            <p class="mb-2">Total posted jobs</p>
            <a href="/admin/jobs" class="btn btn-light btn-sm">Manage Jobs</a>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card mb-3 shadow-sm">
          <div class="card-body bg-info text-white rounded-3">
            <h6>Proposals</h6>
            <h2 class="mt-2"><%= stats.proposalCount %></h2>
            <p class="mb-2">Total submitted proposals</p>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card mb-3 shadow-sm">
          <div class="card-body bg-warning text-dark rounded-3">
            <h6>Escrow Balance</h6>
            <h2 class="mt-2">MYR <%= stats.escrowTotal ? stats.escrowTotal.toFixed(2) : '0.00' %></h2>
            <p class="mb-2">Funds held in escrow</p>
          </div>
        </div>
      </div>
    </div>

    <h3>Recent Users</h3>
    <table class="table table-striped mb-4">
      <thead>
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th>Role</th>
          <th>Joined</th>
        </tr>
      </thead>
      <tbody>
        <% recentUsers.forEach(user => { %>
              <tr>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= user.role %></td>
                <td><%= user.createdAt ? user.createdAt.toDateString() : 'unknown' %></td>
              </tr>
            <% }) %>
      </tbody>
    </table>

    <h3>Recent Jobs</h3>
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Title</th>
          <th>Client</th>
          <th>Status</th>
          <th>Posted</th>
        </tr>
      </thead>
      <tbody>
        <% recentJobs.forEach(job => { %>
          <tr>
            <td><%= job.title %></td>
            <td><%= job.client ? job.client.username : 'N/A' %></td>
            <td><%= job.status %></td>
            <td><%= job.createdAt.toDateString() %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</body>
</html>
