<!DOCTYPE html>
<html>
<head>
  <title>SkillNest - Register</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/style.css" rel="stylesheet">
  <link href="/login.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="login-hero">
    <div class="login-grid container">
      <div class="brand col-md-6 d-none d-md-flex align-items-center justify-content-center">
        <div class="brand-inner text-center">
          <img src="/uploads/1758081623081-Skillnest Logo Black and White.png" alt="SkillNest" class="brand-logo mb-3">
          <h1 class="brand-title">Join SkillNest</h1>
          <p class="brand-sub">Create your account and start connecting with top talent or exciting projects.</p>
        </div>
      </div>
      <div class="col-md-6 col-12 d-flex align-items-center justify-content-center">
        <div class="card login-card shadow-sm">
          <div class="card-body p-4">
            <div class="text-center mb-3">
              <h2 class="mb-0">Create Your Account</h2>
              <p class="text-muted small">Choose your role and get started</p>
            </div>
            <% if (typeof error !== 'undefined') { %>
              <div class="alert alert-danger"><%= error %></div>
            <% } %>
            <form method="POST" action="/auth/register" novalidate>
              <div class="mb-3 position-relative">
                <input type="text" name="username" class="form-control form-control-lg" placeholder="Username" required value="<%= (typeof formData !== 'undefined' && formData.username) ? formData.username : '' %>">
              </div>
              <div class="mb-3 position-relative">
                <input type="email" name="email" class="form-control form-control-lg" placeholder="Email address" required value="<%= (typeof formData !== 'undefined' && formData.email) ? formData.email : '' %>">
              </div>
              <div class="mb-3 position-relative">
                <input id="passwordInput" type="password" name="password" class="form-control form-control-lg" placeholder="Password" required>
                <button id="togglePwd" type="button" class="btn btn-sm btn-outline-secondary pwd-toggle" aria-label="Toggle password visibility">Show</button>
              </div>
              <div class="mb-3">
                <select name="role" class="form-select form-select-lg" required>
                  <option value="client" <%= (typeof formData !== 'undefined' && formData.role === 'client') ? 'selected' : '' %>>Client</option>
                  <option value="freelancer" <%= (typeof formData !== 'undefined' && formData.role === 'freelancer') ? 'selected' : '' %>>Freelancer</option>
                  <!-- Temporary admin option (requires server-side admin code) -->
                  <option value="admin" <%= (typeof formData !== 'undefined' && formData.role === 'admin') ? 'selected' : '' %>>Admin</option>
                </select>
              </div>
              <div class="mb-3" id="adminCodeGroup" style="display:none;">
                <input type="password" name="adminCode" class="form-control form-control-lg" placeholder="Admin registration code">
                <div class="form-text small">Provide the admin registration code if registering as an admin.</div>
              </div>
              <button type="submit" class="btn btn-primary w-100 btn-lg">Register</button>
            </form>
            <div class="mt-3 text-center">
              <a href="/auth/login" class="small">Already have an account? Login</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="/login.js"></script>
  <script>
    // Show admin code input only when admin role is selected
    (function(){
      const roleSelect = document.querySelector('select[name="role"]');
      const adminGroup = document.getElementById('adminCodeGroup');
      function toggle() {
        if (!roleSelect) return;
        adminGroup.style.display = roleSelect.value === 'admin' ? 'block' : 'none';
      }
      if (roleSelect) {
        roleSelect.addEventListener('change', toggle);
        // initialize on page load
        toggle();
      }
    })();
  </script>
</body>
</html>
