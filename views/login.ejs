<!DOCTYPE html>
<html>
<head>
  <title>SkillNest - Login</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/style.css" rel="stylesheet">
  <link href="/login.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="login-hero">
    <div class="login-grid container">
      <div class="brand col-md-6 d-none d-md-flex align-items-center justify-content-center">
        <div class="brand-inner text-center">
          <img src="/Skillnest Logo Black and White.png" alt="SkillNest" class="brand-logo mb-3">
          <h1 class="brand-title">Welcome back to SkillNest</h1>
          <p class="brand-sub">Find great talent or build your career â€” faster.</p>
        </div>
      </div>
      <div class="col-md-6 col-12 d-flex align-items-center justify-content-center">
        <div class="card login-card shadow-sm">
          <div class="card-body p-4">
            <div class="text-center mb-3">
              <h2 class="mb-0">Sign in</h2>
              <p class="text-muted small">Access your SkillNest account</p>
            </div>
            <% if (typeof error !== 'undefined') { %>
              <div class="alert alert-danger"><%= error %></div>
            <% } %>
            <form method="POST" action="/auth/login" novalidate>
              <div class="mb-3 position-relative">
                <input type="email" name="email" class="form-control form-control-lg" placeholder="Email address" required>
              </div>
              <div class="mb-3 position-relative">
                <input id="passwordInput" type="password" name="password" class="form-control form-control-lg" placeholder="Password" required>
                <button id="togglePwd" type="button" class="btn btn-sm btn-outline-secondary pwd-toggle" aria-label="Toggle password visibility">Show</button>
              </div>
              <div class="d-flex justify-content-between align-items-center mb-3">
                <div>
                  <input type="checkbox" id="remember" name="remember"> <label for="remember" class="small">Remember me</label>
                </div>
                <div><a href="/auth/forgot" class="small">Forgot?</a></div>
              </div>
              <button type="submit" class="btn btn-primary w-100 btn-lg">Login</button>
            </form>
            <div class="mt-3 text-center">
              <a href="/auth/register" class="small">Don't have an account? Create one</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>
  <script src="/login.js"></script>
</body>
</html>
