<!DOCTYPE html>
<html>
<head>
  <title><%= profile.username %> - SkillNest</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/style.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-5">
    <div class="card card-soft p-4">
      <div class="d-flex align-items-center">
        <img src="/uploads/<%= profile.profileImage || 'placeholder.png' %>" alt="<%= profile.username %>" class="rounded-circle me-3" style="width:100px;height:100px;object-fit:cover;">
        <div>
          <h3 class="mb-0"><%= profile.username %> <% if (profile && (profile.verified || profile.verificationStatus === 'approved')) { %><span class="badge bg-success ms-2">Verified</span><% } %></h3>
          <small class="text-muted">Joined <%= new Date(profile.createdAt).toLocaleDateString() %></small>
          <div class="mt-2">
            <% if (profile.verificationStatus === 'pending') { %>
              <span class="badge bg-warning">Verification pending</span>
            <% } %>
          </div>
        </div>
      </div>
      <div class="mt-4">
        <div class="d-flex justify-content-between align-items-start">
          <div>
            <p><strong>About</strong></p>
            <p class="text-muted"><%= profile.bio || 'This freelancer has not provided a public bio yet.' %></p>
          </div>
          <div class="text-end">
            <% if (profile && profile.averageRating) { %>
              <div class="mb-2"><strong><%= profile.averageRating %></strong> <span class="text-muted small">/ 5</span></div>
            <% } %>
            <% if (profile && (profile.verified || profile.verificationStatus === 'approved')) { %>
              <button id="hireBtn" class="btn btn-success btn-sm">Hire me</button>
            <% } %>
          </div>
        </div>
      </div>
      <% if (profile && profile.portfolio && profile.portfolio.length) { %>
        <div class="mt-4">
          <h5>Portfolio</h5>
          <div class="d-flex flex-wrap gap-2 mt-2">
            <% profile.portfolio.forEach(function(p) { %>
              <a href="/uploads/<%= p %>" target="_blank" class="portfolio-thumb"><img src="/uploads/<%= p %>" style="width:120px;height:80px;object-fit:cover;border-radius:.4rem"/></a>
            <% }) %>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</body>
</html>
