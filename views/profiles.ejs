<!DOCTYPE html>
<html>
<head>
  <title>Freelancers - SkillNest</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="/style.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-5">
    <h2 class="mb-4">Find Talent</h2>
    <div class="row g-4">
      <% freelancers.forEach(function(f) { %>
        <div class="col-md-4">
          <div class="card card-soft p-3">
            <div class="d-flex align-items-center">
              <img src="/uploads/<%= f.profileImage || 'placeholder.png' %>" alt="<%= f.username %>" class="rounded-circle me-3" style="width:64px;height:64px;object-fit:cover;">
              <div>
                <h6 class="mb-0"><%= f.username %></h6>
                <small class="text-muted">Joined <%= new Date(f.createdAt).toLocaleDateString() %></small>
              </div>
            </div>
            <div class="mt-3">
              <a href="/profile/view/<%= f._id %>" class="btn btn-outline-primary btn-sm">View Profile</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
